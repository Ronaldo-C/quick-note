{
  "manifest_version": 3,
  "name": "Sticky Note",
  "version": "1.0.0",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage"
  ],
  "action": {
    "default_icon": {
      "16": "/images/sticky_note16.png",
      "32": "/images/sticky_note32.png",
      "48": "/images/sticky_note48.png",
      "128": "/images/sticky_note128.png"
    },
    "default_title": "Sticky Note"
  },
  "icons": {
    "16": "/images/sticky_note16.png",
    "32": "/images/sticky_note32.png",
    "48": "/images/sticky_note48.png",
    "128": "/images/sticky_note128.png"
  }
}
